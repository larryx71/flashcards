<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet/less" type="text/css" href="/css/styles.less" />
    <script src='/js/thirdparty/less-1.3.3.min.js'></script>
    <link rel="stylesheet" href="/css/chosen.css"></link>
    <link rel="stylesheet" href="/css/font-awesome.min.css" />
</head>
<body>
    <div id="main">
        <div id="header">
            Home
            <div class="filterContainer">
                <select id="filter" data-placeholder="Filter by technology" class="chzn-select" style="width:180px;">
                    <option value=""></option>
                    <option value="javascript">javascript</option>
                    <option value="coffeescript">coffeescript</option>
                </select>
            </div>
        </div>
        <!-- hardcoded ui for now, soon to be moved to backbone view -->
        <div id="content">
        </div>
        <input id='list' type="hidden" value="<%= JSON.stringify(list) %>" />
    </div>
    <script type="text/template" id="question-template">
        <div class="question">
            <i class="icon-question-sign icon"></i>
            <div class="text">
                {{ question }}
            </div>
            <div class="footer">
                <div class="button">
                    See Answer
                </div>
            </div>
        </div>
    </script>
    <script>
        var App = {
            views : {},
            models : {},
            collections : {},
            service : {},
            utils : {}
        };
    </script>
    <script src="/js/thirdparty/jquery-1.9.0.min.js"></script>
    <script src="/js/thirdparty/chosen.jquery.min.js"></script>
    <script src="/js/thirdparty/jquery.masonry.min.js"></script>
    <script src="/js/thirdparty/underscore-min.js"></script>
    <script>
        _.templateSettings = {
            interpolate : /\{\{(.+?)\}\}/g
        };
    </script>
    <script src="/js/thirdparty/backbone-min.js"></script>
    <script src="/js/models/card.js"></script>
    <script src="/js/models/cards_collection.js"></script>
    <script src="/js/views/app_view.js"></script>
    <script src="/js/views/card_view.js"></script>
    <script src="/js/views/list_view.js"></script>
    <script src="/js/start.js"></script>
</body>
</html>